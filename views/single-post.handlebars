<form>
    <div class="post-header">
        <h2>{{post.title}}</h2>
        <h4>Posted by {{post.user.username}} on {{post.created_at}}</h4>
    </div>

    <div>
        <p>{{post.post_text</p>
    </div>
</form>

{{#if loggedIn}}
<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">add comment</button>
  </div>
</form>
{{if}}

<div class="comments">
  {{#each post.comments}}
  <section class="comment">
    <div class="meta">
      {{user.username}} on {{created_at}}
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>


{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}