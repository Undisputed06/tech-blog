<form>
    <div class="post">
        <h2>{{post.title}}</h2>
        <h4>Posted by {{post.user.username}} on {{format_date post.created_at}}</h4>
    </div>
    <div>
        <p>{{post.post_text}}</p>
    </div>
</form>

{{#if loggedIn}}
<form class="comment-form">
    <div class="post">
        <h2>Add New Comment</h2>
    </div>
    <div class="post-content">
        <div>
            <label>Comment</label>
            <textarea class="textarea" id="comment-text"></textarea>
        </div>
        <button class="btn" type="submit">Submit</button>
    </div>
</form>
{{/if}}

{{#each post.comments as |comment|}}

<form>
    <div>
        <p>{{comment.comment_text}}</p>
    </div>
    <div class="post">
        <h4>- {{user.username}} on {{format_date created_at}}</h4>
    </div>
</form>
{{/each}}

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}