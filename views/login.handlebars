<!-- LOG IN FORM -->
<form class="login-form">
    <div class="post">
        <h2>Login</h2>
    </div>
    <div class="post-content">
        <div>
            <label for="username-input-login">Username</label>
            <input type="text" id="username-input-login">
            <label for="password-input-login">Password</label>
            <input type="password" id="password-input-login">
        </div>
        <button class="btn" type="submit">Login!</button>
        <a class="login-link" href="/signup">Would you like to sign up instead?</a>
    </div>
</form>
<script src="/javascript/login.js"></script>