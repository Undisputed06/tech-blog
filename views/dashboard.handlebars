<div>
    <a href="/addpost" class="btn-add" type="submit">Add New Post</a>
</div>

{{#each posts as |post|}}
<button class="btn btn-post" type="submit">
    <a class="post-link" href="/editpost/{{post.id}}">{{post.title}}</a>
    <span><p class="posted-by">Posted by {{user.username}} on {{format_date post.created_at}}</p></span>
      <div>
        <p>{{post.post_text}}</p>
    </div>
</button>
{{/each}}

