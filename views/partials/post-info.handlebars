  <article>
    <div class="post-container">
        <div class="post-header">
            <div class="post-title">
                <a href="/post/{{id}}">{{title}}</a>
            </div>
        <div class="post-created">
            <p id="comment-info">
                 Post by {{user.username}} on {{created_at}}
            </p>
        </div>
    </div>
    <div class="post-section">
        <p> {{post_text}}</p>
    </div>
  </div>
</article>